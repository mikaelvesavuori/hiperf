	"author": "Mikael Vesavuori",
	"license": "MIT",
	"devDependencies": {
		"babel-core": "latest",
		"babel-eslint": "^8.2.2",
		"babel-loader": "^7.1.3",
		"babel-plugin-lodash": "latest",
		"babel-plugin-syntax-dynamic-import": "latest",
		"babel-preset-env": "latest",
		"babel-preset-stage-0": "latest",
		"brotli-gzip-webpack-plugin": "latest",
		"clean-css": "latest",
		"clean-css-loader": "latest",
		"clean-webpack-plugin": "latest",
		"copy-webpack-plugin": "^4.4.2",
		"css-loader": "^0.28.10",
		"eslint": "^4.18.1",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-prettier": "^2.6.0",
		"extract-text-webpack-plugin": "^4.0.0-beta.0",
		"file-loader": "^1.1.9",
		"html-webpack-plugin": "webpack-contrib/html-webpack-plugin",
		"husky": "latest",
		"imageoptim-cli": "latest",
		"imports-loader": "^0.8.0",
		"lazysizes": "latest",
		"lighthouse": "^2.9.1",
		"lodash-webpack-plugin": "latest",
		"node-sass": "latest",
		"optimize-css-assets-webpack-plugin": "latest",
		"optimize-js-plugin": "latest",
		"path": "latest",
		"postcss-cssnext": "latest",
		"postcss-import": "^11.1.0",
		"postcss-loader": "^2.1.0",
		"precss": "^3.1.1",
		"prettier": "^1.10.2",
		"prettier-stylelint": "^0.4.2",
		"raw-loader": "latest",
		"script-ext-html-webpack-plugin": "latest",
		"sitespeed.io": "^6.3.2",
		"size-limit": "^0.15.1",
		"sonarwhal": "^0.27.0",
		"style-loader": "^0.20.2",
		"stylelint": "^8.4.0",
		"svgo": "^1.0.5",
		"sw-precache-webpack-plugin": "latest",
		"sw-toolbox": "latest",
		"tapable": "^1.0.0",
		"uglify-js": "^3.3.12",
		"url-loader": "^1.0.1",
		"webpack": "^4.0.0-beta.2",
		"webpack-bundle-analyzer": "^2.10.0",
		"webpack-cli": "^2.0.6",
		"webpack-dev-server": "^3.1.0",
		"webpack-merge": "^4.1.2",
		"workbox-webpack-plugin": "^2.1.3"
	},
	"config": {
		"siteurl": "https://www.google.com",
		"imgsrc": "src/assets/images/",
		"imgdist": "dist/assets/images/",
		"gfxsrc": "src/assets/graphics/",
		"gfxdist": "dist/assets/graphics/"
	},
	"scripts": {
		"start": "test && yarn run dev",
		"dev": "webpack --config webpack.dev.js --mode development --watch",
		"clean": "rm -rf dist && mkdir dist",
		"copy": "cp -R src/assets dist/ && cp src/* dist/",
		"prebuild": "yarn clean",
		"build": "webpack --config webpack.prod.js --mode production --display-error-details && yarn run optimize:images && yarn run optimize:graphics",
		"optimize:images": "imageOptim -d $npm_package_config_imgdist",
		"optimize:graphics": "svgo -f $npm_package_config_gfxsrc -p 0.5 --multipass --enable=removeDimensions -o $npm_package_config_gfxdist",
		"test": "size-limit",
		"test:url": "npx lighthouse --view $npm_package_config_siteurl && npx sitespeed.io $npm_package_config_siteurl && npx sonarwhal $npm_package_config_siteurl",
		"precommit": "yarn test",
		"prepush": "npm version patch"
	},
	"size-limit": [
		{
			"limit": "50 KB",
			"webpack": false,
			"path": "*.js"
		}
	]
}
